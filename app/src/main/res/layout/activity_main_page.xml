<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.devendra.sihapp.MainPage">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnFarmer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/farmer1"
                android:scaleX="0.9"
                android:background="#0000"

                />

            <ImageButton
                android:id="@+id/btnModerator"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/moderator"
                android:scaleType="fitXY"
                android:background="#0000"
                android:scaleX="0.5"
                />

            <ImageButton

                android:id="@+id/btnScientist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/scientist1"
                android:background="#0000"
                android:scaleType="fitXY"
                android:scaleX="0.6"
                />


        </LinearLayout>

</android.support.v7.widget.LinearLayoutCompat>